<!DOCTYPE html>
<html>
<head>
    <title>Admin</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        #sidebar {
            background-color: #fff;
            height: 86vh;
        }

        .custom-border {
            border: 2px solid #3883f4;
            border-radius: 5px;
        }

        .maindiv{
            height: 86vh;
        }

        #sidebar a.nav-link:hover {
            color: #3883f4 !important;
        }

    </style>
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand text-primary" href="#">Admin</a>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row mt-4 ml-2">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-4 col-lg-2 d-md-block sidebar custom-border">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/dashboard">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-primary" href="/admin/usermanagement">
                                User Management
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/productmanagement">
                                Product Management
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/categorymanagement">
                                Category Management
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/order/ordermanagement">
                                Order Management
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/offermanagement">
                                Offer Management
                            </a>
                        </li>

                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/couponmanagement">
                                Coupon Management
                            </a>
                        </li>


                        
                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/bannermanagement">
                                Banner Management
                            </a>
                        </li>





                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/logout">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-8 col-lg-10 col-sm-12">
                <div class="custom-border maindiv p-5">
                    <div class="container ">
                        <!-- Add your user data tables here -->
                        <table class="table ">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Block/Unblock</th>
                                    <!-- Add more table headers as needed -->
                                </tr>
                            </thead>
                            <tbody id="userTableBody">
                                <% if(users.length> 0) { %>
                                    <% users.forEach( user=> { %>
                                        <tr>
                                            <td>
                                                <%= user.username %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td>
                                                <% if (user.isBlocked) { %>
                                                    <span class="text-danger">Blocked</span>
                                                <% } else { %>
                                                    <span class="text-success">Not Blocked</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (user.isBlocked) { %>
                                                    <a href="/admin/blockuser/<%= user._id %>" class="btn btn-success">Unblock</a>
                                                <% } else { %>
                                                    <a href="/admin/blockuser/<%= user._id %>" class="btn btn-danger">Block</a>
                                                <% } %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- footer -->
    <div class="mt-4">
    </div>

    <!-- Include Bootstrap JS (jQuery and Popper.js required) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
