<!-- views/adminLogin.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="stylesheet" href="/styles/adminStyles/adminLogin.css">
</head>
<body>
    <div class="container" style="background-color: rgba(0, 0, 0, 0.089);">
        <form action="/admin/login" method="post" novalidate>
            <h2 style="color: black;">Admin Login</h2>
            <% if (message) { %>
                <p class="error-message"><%= message %></p>
            <% } %>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" placeholder="Enter your username" value="susin" required>
            </div>
            <div class="form-group">        
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" value="admin" required>
            </div>
            <button type="submit">Login</button>
        </form>
    </div>
</body>
</html>
